<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.toastercat.xander.GameView
        android:id="@+id/view_game_portal"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_game_portal"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPendingFeatureBackground"
        android:textColor="@color/colorPendingFeatureText"
        android:text="@string/todo_scoreboard"/>

</RelativeLayout>